extends ./layout/main

block content
    .container
       section(style='margin-top: 20px')
            .row.center-align
                h5(style='font-weight: 200')
                    .col.s4
                        a(href='/followers') Followers
                    .col.s4
                        strong Selected followers
                    .col.s4
                        | Graph
            .divider
        .row(style='margin-top: 20px')
            #preloader-container.col.s2.offset-s5
            .col.s8.offset-s2
                .row(id='hierarchical-follower-list-container')
                .row
                    .col.s12.right-align
                        a.waves-effect.waves-light.btn-floating.btn-large.blue(href='/graph')
                            i.material-icons shuffle
    include ./modal/partial-follower-list
    include ./modal/twitter-error           
block javascriptFooter
    script(src='/js/selected-followers.js')
